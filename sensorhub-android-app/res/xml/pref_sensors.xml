    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--
        TODO: list of sensors and each item goes to a sub menu. Once it gets into each sensor, ask Alex for things like orientation.
    -->
    <PreferenceCategory android:title="@string/sensor_android">

        <SwitchPreference
            android:key="accelerometer_enable"
            android:title="Accelerometer"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="accelerometer_options"
            android:enabled="false"
            android:title="Accelerometer Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

        <SwitchPreference
            android:key="gyroscope_enable"
            android:title="Gyroscope"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="gyroscope_options"
            android:enabled="false"
            android:title="Gyroscope Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

        <SwitchPreference
            android:key="magnetometer_enable"
            android:title="Magnetometer"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="magnetometer_options"
            android:enabled="false"
            android:title="Magnetometer Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

        <SwitchPreference
            android:key="orientation_enable"
            android:title="Orientation"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="orientation_angles"
            android:enabled="false"
            android:title="Orientation Angle Format"
            android:summary="(Quaternion, Euler, etc.)"
            android:entries="@array/orientation_angle_list"
            android:entryValues="@array/orientation_angle_values"
            android:defaultValue="@array/orientation_angle_defaults" />

        <MultiSelectListPreference
            android:key="orientation_options"
            android:enabled="false"
            android:title="Orientation Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

        <SwitchPreference
            android:key="location_enable"
            android:title="Location"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="location_type"
            android:enabled="false"
            android:title="Sensor for Location"
            android:summary="(GPS, Network, etc.)"
            android:entries="@array/location_type_list"
            android:entryValues="@array/location_type_values"
            android:defaultValue="@array/location_type_defaults" />

        <MultiSelectListPreference
            android:key="location_options"
            android:enabled="false"
            android:title="Location Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

        <SwitchPreference
            android:key="video_enable"
            android:title="Video"
            android:defaultValue="false" />

        <ListPreference
            android:key="video_codec"
            android:enabled="false"
            android:title="Video Codec"
            android:summary="%s"
            android:entries="@array/video_codec_list"
            android:entryValues="@array/video_codec_list"
            android:defaultValue="JPEG" />

        <MultiSelectListPreference
            android:key="video_options"
            android:enabled="false"
            android:title="Video Output Options"
            android:summary="Options for pushing data"
            android:entries="@array/sos_option_list"
            android:entryValues="@array/sos_option_values"
            android:defaultValue="@array/sos_option_defaults" />

