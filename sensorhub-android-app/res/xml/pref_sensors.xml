        android:title="Angel Sensor Health Data" />

    <ListPreference
        android:title="Angel Sensor Health SOS"
        android:summary=""
        android:key="angel_sos"
        android:defaultValue="1"
        android:entries="@array/sos_option_list"
        android:entryValues="@array/sos_value_list" />

    <EditTextPreference
        android:key="angel_address"
        android:inputType="text"
        android:singleLine="true"
        android:defaultValue="00:07:80:03:0E:0A"
        android:title="Angel Sensor Bluetooth Address" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="flirone_enabled"
        android:summary="Enable streaming of FLIR One thermal camera data when connected on USB port"
        android:title="FLIR One Thermal Camera Data" />

    <ListPreference
        android:title="FLIR One Thermal Camera SOS"
        android:summary=""
        android:key="flirone_sos"
        android:defaultValue="1"
        android:entries="@array/sos_option_list"
        android:entryValues="@array/sos_value_list" />

